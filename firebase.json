// firebase.json

{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/registrarAdmin", // <-- NOU REWRITE
        "function": "registrarAdmin"
      },
      {
        "source": "/api/**",
        "function": "testConexionDB" // O la funciÃ³ que gestioni altres rutes
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}