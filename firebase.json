{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [

      // Regla per a la pàgina d'inscripció
      {
        "source": "/inscripcio",
        "destination": "/inscripcio.html"
      },
      // Regla per a la pàgina d'administradors
      {
        "source": "/administradors",
        "destination": "/administradors.html"
      },
      // Regla general per a SPA (Single Page Application)
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
