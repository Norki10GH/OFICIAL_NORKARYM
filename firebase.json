{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/getNewUsers",
        "function": "getNewUsers"
      },
      {
        "source": "/api/updateNewUser",
        "function": "updateNewUser"
      },
      {
        "source": "/api/registerNewUser",
        "function": "registerNewUser"
      },
      {
        "source": "/api/getUsersSummary",
        "function": "getUsersSummary"
      },
      {
        "source": "/api/processNewUser",
        "function": "processNewUser"
      },
      {
        "source": "/api/sendContactEmail",
        "function": "sendContactEmail"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ]
}
