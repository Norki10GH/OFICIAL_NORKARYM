{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/addAdmin",
        "function": "addAdmin"
      },
      {
        "source": "/api/registerNewUser",
        "function": "registerNewUser"
      },
      {
        "source": "/inscripcio",
        "destination": "/src/pages/inscripcio.html"
      },
      {
        "source": "/administracio",
        "destination": "/src/pages/administradors.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ]
}
