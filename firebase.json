{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api_norkarym"
      },
      {
        "source": "/inscripcio",
        "destination": "/src/pages/inscripcio.html"
      },
      {
        "source": "/administracio",
        "destination": "/src/pages/administradors.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions"
  }
}
